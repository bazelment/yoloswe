load("@rules_go//go:def.bzl", "go_test")

# Integration tests require a valid Claude API key and network access.
# "local" disables sandboxing so the test can access ~/.claude/ for API keys.
# "manual" excludes from wildcard builds (bazel test //...).
# Run with: bazel test //agent-cli-wrapper/claude/integration:integration_test
go_test(
    name = "integration_test",
    srcs = [
        "sdk_mcp_test.go",
        "sdk_mcp_typed_test.go",
        "session_test.go",
    ],
    gotags = ["integration"],
    tags = [
        "integration",
        "local",
        "manual",
    ],
    deps = [
        "//agent-cli-wrapper/claude",
        "//agent-cli-wrapper/protocol",
    ],
)
